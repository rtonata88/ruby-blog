<div class="container w-75">
<div class="row mx-auto border rounded col-md-6 p-2">
<h2>Log in</h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field w-100 col-12">
    <%= f.label :email, class: "w-75" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control mx-auto" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "w-75" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control mx-auto" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, class: "mx-auto" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "btn btn-primary" %>
  </div>
<% end %>
<%= render "devise/shared/links"%>
</div>
</div>
