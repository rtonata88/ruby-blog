    <div class="row py-2">
        <div class="col-lg-6 col-md-8 mx-auto">
            <div class="row border rounded overflow-hidden p-2">
                <div class="col-md-8">
                    <h3 class="mb-0"><%= @post.title %></h3>
                    <div class="mb-1 text-muted">
                        <p>
                            <%= @post.text %>
                        </p>
                        <span class="badge bg-primary">
                           Comments: <%= @post.comments_counter %>
                        </span>
                        <span class="badge bg-info text-dark">
                           Likes: <%= @post.likes_counter %>
                        </span>
                        <hr>
                        <i>
                        <% @post.comments.each do |comment| %>
                        <p>
                            <strong><%= comment.post.author.name %></strong>: <%= comment.text %>
                        </p>
                        <% end %>
                        </i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row py-2">
        <div class="col-lg-6 col-md-8 mx-auto">
            <div class="row border rounded overflow-hidden p-2">
                <div class="col-md-8">
                    <h6 class="mb-0">Comment: </h6>
                    <div class="mb-1 text-muted">
                        <%= form_with model: @post, url: "/comments/#{@post.id}", method: :post do |form| %>
                        <div class="form-group py-2">
                            <%= form.text_area :text, class:"form-control", value: "", placeholder: 'Write your comment here' %>
                            <%= form.hidden_field :post_id, class:"form-control", value: @post.id %>
                            <%= form.hidden_field :user_id, class:"form-control", value: @post.user_id %>
                        </div>
                      
                        <div class="form-group py-2">
                            <%= form.submit "Submit", class: "btn btn-primary" %>
                        </div>
                        <% end %> 
                    </div>
                </div>
            </div>
        </div>
    </div>