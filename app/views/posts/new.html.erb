<main>
  <section class="py-5">
    <div class="row py-lg-2">
      <div class="col-lg-6 col-md-8 mx-auto">
       <div class="row border rounded overflow-hidden p-2">
        <div class="col-md-8 mx-auto">
          <h3 class="mb-0">New post</h3>
            <% flash.each do |type, msg| %>
                <div class="alert alert-success" >
                    <%= msg %>
                </div>
            <% end %>
            <%= form_with model: [post, @user], url: posts_path, method: :post, local: true, scope: :post do |form| %>
            <div class="form-group py-2">
                <%= form.text_field :title, class:"form-control", placeholder: 'Title' %>
                <%= form.hidden_field :user_id, class:"form-control", value: @user.id %>
            </div>
            <div class="form-group py-2">
                <%= form.text_field :text, class:"form-control", placeholder: 'Text' %>
            </div>
            <div class="form-group py-2">
                <%= form.submit "Save", class: "btn btn-primary" %>
                <%= link_to "/users/#{@user.id}" do %>
                    <input type="button" class="btn" value="Cancel">
                <% end %>
            </div>
            <% end %> 
        </div>
      </div>
      </div>
    </div>
  </section>
</main>