<main>
  <section class="py-5">
    <div class="row py-lg-2">
      <div class="col-lg-6 col-md-8 mx-auto">
       <div class="row border rounded overflow-hidden p-2">
        <div class="col-md-4">
          <%= image_tag( @user.photo, class:"img-fluid rounded", width: "200", height:"250") %>
        </div>
        <div class="col-md-8">
          <h3 class="mb-0"><%= @user.name %></h3>
          <div class="mb-1 text-muted">Posts: <%= @user.posts_counter || 0 %></div>
        </div>
      </div>
      </div>
    </div>
  </section>
    <div class="row py-lg-2">
      <div class="col-lg-6 col-md-8 mx-auto">
       <div class="row border rounded overflow-hidden p-2">
        <div class="col-md-8">
          <h3 class="mb-0">Bio</h3>
          <div class="mb-1 text-muted">
            <p>
                <%= @user.bio %>
            </p>
          </div>
        </div>
      </div>
      </div>
    </div>
<% @user.most_recent_posts.each do |post| %>
    <div class="row py-2">
        <div class="col-lg-6 col-md-8 mx-auto">
            <div class="row border rounded overflow-hidden p-2">
                <div class="col-md-8">
                 <%= link_to "/users/#{@user.id}/posts" do %>
                    <h3 class="mb-0"><%= post.title %></h3>
                <% end %>
                    <div class="mb-1 text-muted">
                        <p>
                            <%= post.text %>
                        </p>
                        <span class="badge bg-primary">
                           Comments: <%= post.comments_counter %>
                        </span>
                        <span class="badge bg-info text-dark">
                           Likes: <%= post.likes_counter %>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
<% end %>
</main>